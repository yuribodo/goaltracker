generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Goal {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  completed   Boolean
  tasks       Task[]   @relation("GoalTasks")
}

model Task {
  id       Int    @id @default(autoincrement())
  name     String
  status   String
  goalId   Int
  goal     Goal   @relation("GoalTasks", fields: [goalId], references: [id])

  @@index([goalId], name: "goalId_idx")
}